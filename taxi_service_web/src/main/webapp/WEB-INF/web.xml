<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <!-- Объявляем фильтры-->
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>ua.rudniev.taxi.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>JspFilter</filter-name>
    <filter-class>ua.rudniev.taxi.filter.JspFilter</filter-class>
  </filter>
  <filter>
    <filter-name>IndexFilter</filter-name>
    <filter-class>ua.rudniev.taxi.filter.IndexFilter</filter-class>
  </filter>
  <!-- Только авторизованным пользователям разрешено заказывать поездку-->
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <servlet-name>OrderingServlet</servlet-name>
  </filter-mapping>
  <!-- В папку jsp я вообще доступ закрыл (этот фильтр отвечает jsp/forbidden.jsp)-->
  <filter-mapping>
    <filter-name>JspFilter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>
  <!-- Если мы залогинины то мы редиректимся сразу на страницу заказов такси с главной страницы и регитсрации (с логином)-->
  <filter-mapping>
    <filter-name>IndexFilter</filter-name>
    <url-pattern>/index.jsp</url-pattern>
    <servlet-name>RegistrationServlet</servlet-name>
  </filter-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OrderingServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.OrderingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CarRegistrationServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.CarRegistrationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.ProfileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditUserServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.EditUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <servlet-class>ua.rudniev.taxi.servlet.ChangePasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OrderingServlet</servlet-name>
    <url-pattern>/ordering</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CarRegistrationServlet</servlet-name>
    <url-pattern>/carRegistration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditUserServlet</servlet-name>
    <url-pattern>/editUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <url-pattern>/changePassword</url-pattern>
  </servlet-mapping>
</web-app>
